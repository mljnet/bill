<body>
  <!-- Floating Elements -->
  <div class="floating-elements">
    <div class="floating-element"></div>
    <div class="floating-element"></div>
    <div class="floating-element"></div>
  </div>

  <div class="main-container">
  <div class="card">
      <!-- Header Section -->
      <div class="card-header text-center">
        <div class="status-icon mx-auto">
          <i class="bi bi-wifi-off" style="font-size: 2rem;"></i>
        </div>
        <h1 class="brand mb-3">Akses Internet Dibatasi</h1>
        <div class="badge-modern">Isolir Aktif</div>
        <% if (logoPath) { %>
          <div class="mt-3">
          <img class="logo" src="<%= logoPath %>" alt="Logo <%= companyHeader %>" />
          </div>
        <% } %>
      </div>

      <!-- Content Section -->
      <div class="card-body p-4 p-md-5">
        <!-- Welcome Message -->
        <div class="info-card">
          <div class="d-flex align-items-start gap-3">
            <div class="flex-shrink-0">
              <i class="bi bi-person-circle text-primary" style="font-size: 2rem;"></i>
            </div>
            <div>
              <h5 class="mb-2">Halo <strong><%= customerName %></strong>!</h5>
              <p class="muted mb-0">Akses internet Anda saat ini sedang dibatasi (isolir). Hal ini umumnya terjadi karena salah satu dari alasan berikut:</p>
            </div>
          </div>
        </div>

        <!-- Reasons List -->
        <div class="info-card">
          <h6 class="mb-3"><i class="bi bi-list-check text-warning me-2"></i>Kemungkinan Penyebab:</h6>
          <ul class="mb-0" style="padding-left: 1.2rem;">
