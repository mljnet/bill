            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .mobile-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            font-size: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
