                50% { 
                    transform: scale(1.1);
                    box-shadow: 0 4px 12px rgba(255,215,0,0.5);
                }
                100% { 
                    transform: scale(1);
                    box-shadow: 0 3px 8px rgba(0,0,0,0.3);
                }
            }
        
        .loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
