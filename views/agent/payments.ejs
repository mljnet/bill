                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            Agent
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/agent/profile">
                                <i class="fas fa-user me-2"></i>Profil
                            </a></li>
                            <li><a class="dropdown-item" href="/agent/change-password">
                                <i class="fas fa-key me-2"></i>Ubah Password
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/agent/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <!-- Balance Card -->
        <div class="balance-card">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h4 class="mb-2">
                        <i class="fas fa-wallet me-2"></i>
                        Saldo Tersedia
                    </h4>
                    <h2 class="mb-0">Rp <%= balance.toLocaleString() %></h2>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/agent/balance" class="btn btn-light">
                        <i class="fas fa-plus me-1"></i>
                        Request Saldo
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Payment Form -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-credit-card me-2"></i>
                            Proses Pembayaran Pelanggan
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="paymentForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="customerSearch" class="form-label">Cari Pelanggan (nama, nomor pelanggan, atau HP)</label>
                                    <input type="text" class="form-control" id="customerSearch" placeholder="Ketik nama, nomor pelanggan, atau nomor HP...">
                                    <div id="customerSearchResults" class="list-group position-absolute w-100" style="z-index: 10;"></div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="customerId" class="form-label">ID Pelanggan</label>
                                    <input type="number" class="form-control" id="customerId" name="customerId" placeholder="Masukkan ID pelanggan" required>
                                    <div class="form-text">ID pelanggan dari sistem billing</div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="paymentAmount" class="form-label">Jumlah Pembayaran</label>
                                    <input type="number" class="form-control" id="paymentAmount" name="paymentAmount" 
                                           placeholder="Masukkan jumlah pembayaran" required>
                                    <div class="form-text">
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Bisa bayar sebagian atau full amount. Sistem akan otomatis alokasi ke tagihan tertua.
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="paymentMethod" class="form-label">Metode Pembayaran</label>
                                    <select class="form-control" id="paymentMethod" name="paymentMethod" required>
                                        <option value="">Pilih metode pembayaran</option>
                                        <option value="cash">Tunai</option>
                                        <option value="transfer">Transfer Bank</option>
                                        <option value="qris">QRIS</option>
                                        <option value="ewallet">E-Wallet</option>
                                    </select>
                                </div>
                            </div>
                            
                            <!-- Hapus opsi partial/full payment dari form -->
                            <!-- Payment Options dihapus, hanya pembayaran full -->
                            
                            <div class="mb-3">
                                <label for="notes" class="form-label">Catatan (Opsional)</label>
                                <textarea class="form-control" id="notes" name="notes" rows="3" 
                                          placeholder="Catatan tambahan..."></textarea>
                            </div>
                            
                            <div class="commission-info" id="commissionInfo" style="display: none;">
                                <h6 class="mb-2">
                                    <i class="fas fa-calculator me-2"></i>
                                    Rincian Pembayaran
                                </h6>
                                <div class="row">
                                    <div class="col-4">
                                        <small class="text-muted">Total Bayar:</small>
                                        <div id="commissionAmount" class="fw-bold text-primary"></div>
                                    </div>
                                    <div class="col-4">
                                        <small class="text-muted">Komisi (5%):</small>
                                        <div id="commissionEarned" class="fw-bold text-success"></div>
                                    </div>
                                    <div class="col-4">
                                        <small class="text-muted">Potong Saldo:</small>
                                        <div id="netAmount" class="fw-bold text-warning"></div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Saldo akan dipotong sebesar "Potong Saldo" dan ditambah komisi
                                    </small>
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-process" id="submitBtn">
                                    <i class="fas fa-check me-2"></i>
                                    Proses Pembayaran
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Quick Actions -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-bolt me-2"></i>
                            Aksi Cepat
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/agent/vouchers" class="btn btn-outline-primary">
                                <i class="fas fa-ticket-alt me-2"></i>
                                Jual Voucher
                            </a>
                            <a href="/agent/payment-history" class="btn btn-outline-success">
                                <i class="fas fa-history me-2"></i>
                                Riwayat Pembayaran
                            </a>
                            <a href="/agent/balance" class="btn btn-outline-warning">
                                <i class="fas fa-wallet me-2"></i>
                                Kelola Saldo
                            </a>
                            <a href="/agent/transactions" class="btn btn-outline-info">
                                <i class="fas fa-receipt me-2"></i>
                                Semua Transaksi
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-credit-card me-2"></i>
                            Metode Pembayaran
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="payment-method" data-method="cash">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-money-bill-wave text-success me-3"></i>
                                <div>
                                    <h6 class="mb-0">Tunai</h6>
                                    <small class="text-muted">Pembayaran langsung</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="payment-method" data-method="transfer">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-university text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-0">Transfer Bank</h6>
                                    <small class="text-muted">Transfer ke rekening</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="payment-method" data-method="qris">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-qrcode text-info me-3"></i>
                                <div>
                                    <h6 class="mb-0">QRIS</h6>
                                    <small class="text-muted">Scan QR code</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="payment-method" data-method="ewallet">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-mobile-alt text-warning me-3"></i>
                                <div>
                                    <h6 class="mb-0">E-Wallet</h6>
                                    <small class="text-muted">GoPay, OVO, DANA</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-check-circle me-2"></i>
                        Pembayaran Berhasil Diproses!
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="success-alert">
                        <h6 class="mb-2">Detail Pembayaran</h6>
                        <div class="row">
                            <div class="col-4">
                                <small>Total Bayar:</small>
                                <div id="resultAmount" class="fw-bold"></div>
                            </div>
                            <div class="col-4">
                                <small>Komisi:</small>
                                <div id="resultCommission" class="fw-bold"></div>
                            </div>
                            <div class="col-4">
                                <small>Potong Saldo:</small>
                                <div id="resultNetAmount" class="fw-bold"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Catatan:</strong> Pembayaran telah diproses dan komisi telah ditambahkan ke saldo Anda.
                    </div>
                    
                    <div class="alert alert-success" id="restoreInfo" style="display: none;">
                        <i class="fas fa-wifi me-2"></i>
                        <strong>Layanan Dipulihkan:</strong> <span id="restoreMessage"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    <button type="button" class="btn btn-primary" onclick="location.reload()">
                        <i class="fas fa-plus me-2"></i>
                        Proses Pembayaran Lagi
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Payment method selection
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', function() {
                // Remove previous selection
                document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
                
                // Add selection to clicked method
                this.classList.add('selected');
                
                // Update form
                document.getElementById('paymentMethod').value = this.dataset.method;
            });
        });

        // Function to update commission info
        function updateCommissionInfo() {
            const amount = parseFloat(document.getElementById('paymentAmount').value);
            if (amount > 0) {
                const commission = Math.round(amount * 0.05);
                
                document.getElementById('commissionAmount').textContent = 'Rp ' + amount.toLocaleString();
                document.getElementById('commissionEarned').textContent = 'Rp ' + commission.toLocaleString();
                document.getElementById('netAmount').textContent = 'Rp ' + amount.toLocaleString(); // Full amount dipotong
                document.getElementById('commissionInfo').style.display = 'block';
            } else {
                document.getElementById('commissionInfo').style.display = 'none';
            }
        }

        // Calculate commission
        document.getElementById('paymentAmount').addEventListener('input', function() {
            updateCommissionInfo();
        });

        // Hapus semua event dan logika terkait radio partial/full
        // Pastikan field nominal auto-fill dan readonly setelah pilih pelanggan
        // Hapus semua kode yang mengacu ke elemen yang sudah dihapus

        // Form submission
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Validation
            if (!data.customerId || !data.paymentAmount || !data.paymentMethod) {
                alert('Customer ID, jumlah pembayaran, dan metode pembayaran harus diisi!');
                return;
            }
            
            const amount = parseFloat(data.paymentAmount);
            if (isNaN(amount) || amount <= 0) {
                alert('Jumlah pembayaran harus lebih dari 0!');
                return;
            }
            
            // Show loading
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Memproses...';
            submitBtn.disabled = true;
            
            // Send request
            fetch('/agent/process-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success modal
                    const commission = Math.round(amount * 0.05);
                    
                    document.getElementById('resultAmount').textContent = 'Rp ' + amount.toLocaleString();
                    document.getElementById('resultCommission').textContent = 'Rp ' + commission.toLocaleString();
                    document.getElementById('resultNetAmount').textContent = 'Rp ' + amount.toLocaleString(); // Full amount dipotong
                    
                    // Show restore info if available
                    if (data.restoreInfo) {
                        document.getElementById('restoreMessage').textContent = data.restoreInfo.message;
                        document.getElementById('restoreInfo').style.display = 'block';
                    } else {
                        document.getElementById('restoreInfo').style.display = 'none';
                    }
                    
                    const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                    successModal.show();
                    
                    // Reset form
                    this.reset();
                    document.getElementById('commissionInfo').style.display = 'none';
                    document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Terjadi kesalahan saat memproses pembayaran');
            })
            .finally(() => {
                // Reset button
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            });
        });

        // Auto format amount
        document.getElementById('paymentAmount').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            e.target.value = value;
        });

        // Autocomplete pencarian pelanggan
        const searchInput = document.getElementById('customerSearch');
        const resultsBox = document.getElementById('customerSearchResults');
        const customerIdInput = document.getElementById('customerId');
        let searchTimeout = null;

        searchInput.addEventListener('input', function() {
            const q = this.value.trim();
            resultsBox.innerHTML = '';
            if (searchTimeout) clearTimeout(searchTimeout);
            if (q.length < 2) return;
            searchTimeout = setTimeout(() => {
                fetch(`/agent/api/search-customer?q=${encodeURIComponent(q)}`)
                    .then(res => res.json())
                    .then(data => {
                        resultsBox.innerHTML = '';
                        if (data.success && data.customers.length > 0) {
data.customers.forEach(cust => {
    const item = document.createElement('button');
    item.type = 'button';
    item.className = 'list-group-item list-group-item-action';
    
    // Status pelanggan
    let statusBadge = '';
    if (cust.status) {
        statusBadge = `<span class='badge ${cust.status === 'active' ? 'bg-success' : 'bg-secondary'} ms-1'>${cust.status}</span>`;
    }
    
    // Status pembayaran
    let paymentStatusBadge = '';
    let paymentStatusText = '';
    if (cust.payment_status === 'paid') {
        paymentStatusBadge = `<span class='badge bg-success ms-1'>LUNAS</span>`;
        paymentStatusText = 'Tagihan sudah lunas';
    } else if (cust.payment_status === 'unpaid') {
        paymentStatusBadge = `<span class='badge bg-warning ms-1'>BELUM LUNAS</span>`;
        paymentStatusText = `Tagihan belum lunas (Rp ${parseFloat(cust.last_invoice_amount || 0).toLocaleString()})`;
    } else {
        paymentStatusBadge = `<span class='badge bg-info ms-1'>TIDAK ADA TAGIHAN</span>`;
        paymentStatusText = 'Tidak ada tagihan';
    }
    
    item.innerHTML = `
        <div class='d-flex justify-content-between align-items-center'>
            <div>
                <strong>${cust.name}</strong> (ID: ${cust.id})<br>
                <small>HP: ${cust.phone || '-'}</small><br>
                <small>Alamat: ${cust.address || '-'}</small><br>
                <small class='text-muted'>${paymentStatusText}</small>
            </div>
            <div>
                ${statusBadge}
                ${paymentStatusBadge}
            </div>
        </div>
    `;
    
    // Disable jika sudah lunas
    if (cust.payment_status === 'paid') {
        item.classList.add('disabled');
        item.style.opacity = '0.6';
        item.style.cursor = 'not-allowed';
    }
    
    item.onclick = () => {
        if (cust.payment_status === 'paid') {
            alert('Gagal: Tagihan sudah lunas! Tidak bisa memproses pembayaran.');
            return;
        }
        window.selectedCustomerData = cust;
        document.getElementById('customerId').value = cust.id;
        // Selalu auto-fill nominal unpaid dan readonly
        if (cust.unpaid_invoice_amount) {
            document.getElementById('paymentAmount').value = cust.unpaid_invoice_amount;
            document.getElementById('paymentAmount').readOnly = true;
        } else {
            document.getElementById('paymentAmount').value = '';
            document.getElementById('paymentAmount').readOnly = false;
        }
        document.getElementById('paymentMethod').value = 'cash';
        document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
        const cashMethod = document.querySelector('.payment-method[data-method="cash"]');
        if (cashMethod) {
            cashMethod.classList.add('selected');
        }
        updateCommissionInfo();
        setTimeout(() => {
            const submitBtn = document.getElementById('submitBtn');
            if (submitBtn) {
                submitBtn.focus();
                submitBtn.style.transform = 'scale(1.05)';
                submitBtn.style.boxShadow = '0 0 20px rgba(102, 126, 234, 0.5)';
                setTimeout(() => {
                    submitBtn.style.transform = 'scale(1)';
                    submitBtn.style.boxShadow = '';
                }, 1000);
            }
        }, 100);
        const amount = parseFloat(cust.unpaid_invoice_amount || 0);
        const commission = Math.round(amount * 0.05);
        const notification = document.createElement('div');
        notification.className = 'alert alert-success alert-dismissible fade show position-fixed';
        notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 350px;';
        notification.innerHTML = `
            <i class=\"fas fa-check-circle me-2\"></i>
            <strong>Data berhasil diisi otomatis!</strong><br>
            <small>
                Total Bayar: Rp ${amount.toLocaleString()}<br>
